{
    "devDependencies": {
        "css-loader": "^7.1.2",
        "html-webpack-plugin": "^5.6.5",
        "style-loader": "^4.0.0",
        "webpack": "^5.104.0",
        "webpack-cli": "^6.0.1",
        "webpack-dev-server": "^5.2.2"
    },
    "scripts": {
        "dev": "webpack serve --open --config webpack.dev.js",
        "build": "webpack --config webpack.prod.js",
